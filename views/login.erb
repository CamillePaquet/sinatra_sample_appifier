<% if @error %>
  <div class="error"><%=translate("user.error_cuid_password")%></div>
<% end %>


<form action="/login" method="post" class="row justify-content-md-center mt-4">
  <div class="col-5">
    <h1 class="text-primary"><%=translate("navigation.connection")%></h1>
    <div class="mb-3 ">
      <label for="username" class="form-label">Username</label>
      <input class="form-control" type="text" name="username" placeholder="Username"/>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label"><%=translate("user.password")%></label>
      <input class="form-control" type="password" name="password" placeholder="Mot de passe" />
    </div>
    <div class="d-flex mt-4 justify-content-md-end">
      <button type="submit" class="btn btn-primary"><%=translate("navigation.connection")%></button>
    </div>
  </div>
</form>
